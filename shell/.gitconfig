[user]
  name = Diran Li
  email = diranl@palantir.com
[core]
  ignorecase = true
  editor = /usr/bin/vim
[branch]
  autosetuprebase = always
[alias]
  co = checkout
  st = status
  sb = status -sb
  cp = cherry-pick
  br = branch
  last = log -1
  hlog = log --all --date-order --graph --format=\"%C(green)%H%Creset %C(yellow)%an%Creset %C(blue bold)%ad%Creset %C(red bold)%d%Creset%s\"
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  cr = "!git push origin HEAD:`git config branch.$(git rev-parse --abbrev-ref HEAD).merge | sed 's/heads/for/'`"
  publish = "!git push origin HEAD:refs/heads/master ; git push --tags"
[color]
  ui = true
[mergetool "splice"]
  cmd = "mvim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
  trustExitCode = true
[mergetool "fugitive"]
  cmd = mvim -f -c \"Gdiff\" \"$MERGED\"
[merge]
	tool = diffconflicts
[difftool]
  prompt = false
[mergetool "diffconflicts"]
	cmd = diffconflicts mvim $BASE $LOCAL $REMOTE $MERGED
	trustExitCode = true
	keepBackup = false
