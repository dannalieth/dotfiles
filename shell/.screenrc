shell "/bin/zsh"

bind ; resize max
bind l resize =
bind k resize 15

startup_message off
autodetach on
altscreen on

defscrollback 5000

caption string "%{= kB} %t%= STOP PROCASTINATION %?%F%{= Bk}%:%{= wk}%? %n "
hardstatus alwayslastline
hardstatus string '%{= kG}%{C}Screen: %{c}%{= kG}[%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{C} %d-%m %{W}%c %{g}]'

#chdir '/Users/diran/Dropbox/Ninja'
screen -t "JOURNAL" vim + Journal.txt
chdir 
screen -t "CODE"
select 0


